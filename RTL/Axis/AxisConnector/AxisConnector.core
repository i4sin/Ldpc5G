CAPI=2: 2

name: Yasin:RTL:AxisConnector
description: AxisConnector

filesets:
  rtl_files:
    files:
      - src/AxisConnector.sv
    file_type: systemVerilogSource
    depend:
      - Yasin:TestInterfaces:AxisIf

  tb_files:
    logical_name: tb_lib
    files:
      - test/TestCase/TestCases.sv
      - test/TestCase/Test.sv: {is_include_file: true}
      - test/Vunit_tb.sv

    file_type: systemVerilogSource
    depend:
      - Yasin:RTL:AxisConnectorTest
      - Yasin:TestUtils:Vunit

targets:
  default: &default
    filesets:
      - rtl_files

  synthesis:
    <<: *default

  test:
    <<: *default
    default_tool: vunit
    tools:
      vunit:
        vunit_runner: vunit.py
    filesets_append:
      - tb_files
    toplevel: DontCare
